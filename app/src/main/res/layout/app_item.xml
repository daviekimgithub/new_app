<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="12dp"
    android:layout_margin="5dp"
    android:elevation="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Counter Best Games"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBaseline_toTopOf="@id/item_image"
            />

        <TextView
            android:id="@+id/item_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play"
            android:drawableLeft="@drawable/ic_download"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toTopOf="@id/item_image"
            />

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_image_placeholder"
            app:layout_constraintTop_toBottomOf="@id/item_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />


        <TextView
            android:id="@+id/item_review_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Very Positive 88% of the 7,342,432 user reviews for this game are positive."
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@id/item_title"
            app:layout_constraintStart_toEndOf="@id/item_image"
            app:layout_constraintTop_toTopOf="@id/item_image"
            />

        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8,19€0,81€"
            android:drawableLeft="@drawable/ic_money"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@id/item_review_summary"
            app:layout_constraintStart_toEndOf="@id/item_image"
            />

        <TextView
            android:id="@+id/item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 Nov, 2000"
            android:drawableLeft="@drawable/ic_calender"
            android:textStyle="italic"
            android:textSize="14dp"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@id/item_review_summary"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>